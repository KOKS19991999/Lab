<h2>Отчёты по лабораторным</h2>

<% @reports.each do |report| %>
    <div><%= report.title%></div>
    <div><%= report.body_report%></div>
    <div><%= report.mark%></div>
    <div>
        <%= link_to add_mark_path(:report_id => report) do%>
        <%= button_tag('Выставить оценку', type: 'button')%>
        <%end%>
    </div>
     <div>
        <%= link_to delete_path(:report_id => report) do%>
        <%= button_tag('Удалить отчёт', type: 'button')%>
        <%end%>
    </div>
<% end %>