<h2>Отчёты по лабораторным</h2>
<%= link_to crt_path do%>
<%= button_tag('Добавить отчёт', type: 'button')%>
<%end%>

<% @report.each do |report| %>
    <div><%= report.tittle%></div>
    <div><%= report.description%></div>
    
    <%if report.marks.first%>
    <div><span>Оценка:</span><%= report.marks.first.letter%><span>&nbsp(<%= report.marks.first.points%>)</div>
    
    <%else%>
     <div>
        <%= link_to add_mark_path(:report_id => report) do%>
        <%= button_tag('Выставить оценку', type: 'button')%>
        <%end%>
    </div>
    <%end%>
   
     <div>
        <%= link_to delete_path(:report_id => report) do%>
        <%= button_tag('Удалить отчёт', type: 'button')%>
        <%end%>
    </div>
<% end %>