<h2>Выставить оценку отчёту <%=@record.tittle%></h2>

<%= form_for :pages, url: pages_update_path(:report_id => @record.id) do |f| %>
    <span>Оценка: </span>
    <% if (@mrk != nil && @mrk.errors.any?) %>
    <div id="error_explanation">
        <p><%=@mrk.errors[:points]%></p>
    </div>
    <% end %>
    <%= f.text_field :points %></br></br>
    <div><%= f.submit 'Выставить' %></div>
<% end %>

<%= link_to home_path do%>
<%= button_tag('Главная', type: 'button')%>
<%end%>

